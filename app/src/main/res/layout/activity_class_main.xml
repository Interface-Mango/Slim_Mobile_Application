<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.hyejin.slimtest.classActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.67"
        android:background="#fcdd32"
        android:gravity="center">

        <TextView
            android:id="@+id/bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"/>
            <!--android:text="@string/sub_bar_name"-->

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:gravity="center"
        android:weightSum="0"
        android:layout_weight="5.59">

        <ImageView
            android:id="@+id/logo"
            android:layout_weight="1"
            android:layout_width="150sp"
            android:layout_height="100sp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/notice_btn"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:src="@drawable/notice" />


    <ImageView
        android:id="@+id/question_btn"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:src="@drawable/question"/>

        <ImageView
            android:id="@+id/attendence_btn"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:src="@drawable/attendence"/>
        <ImageView
            android:id="@+id/qna_btn"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:src="@drawable/qna"/>
        <ImageView
            android:id="@+id/advicenote_btn"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:src="@drawable/advicenote"/>
    </LinearLayout>
</LinearLayout>